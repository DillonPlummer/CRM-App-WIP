<div class="card card-body">
  <h1 class="text-center">New Client</h1>
  <form class="" action="/clients" method="post">
    <!-- first name -->
    <div class="form-group">
      <label for="firstName">First Name</label>
      <input type="text" class="form-control" name="firstName">
    </div>

    <!-- last name -->
    <div class="form-group">
      <label for="lastName">Last Name</label>
      <input type="text" class="form-control" name="lastName">
    </div>

    <!-- email -->
    <div class="form-group">
      <label for="email">Email</label>
      <input type="text" class="form-control" name="email">
    </div>

    <!-- phone -->
    <div class="form-group">
      <label for="phone">Phone</label>
      <input type="text" class="form-control" name="phone">
    </div>

    <!-- alt. phone -->
    <div class="form-group">
      <label for="altPhone">Alt. Phone</label>
      <input type="text" class="form-control" name="altPhone">
    </div>

    <!-- street address -->
    <div class="form-group">
      <label for="streetAddress">Street Address</label>
      <input type="text" class="form-control" name="streetAddress">
    </div>

    <!-- city -->
    <div class="form-group">
      <label for="city">City</label>
      <input type="text" class="form-control" name="city">
    </div>

    <!-- state -->
    <div class="form-group">
      <label for="state">State</label>
      <input type="text" class="form-control" name="state">
    </div>

    <!-- zip -->
    <div class="form-group">
      <label for="zip">Zip Code</label>
      <input type="text" class="form-control" name="zip">
    </div>

    <!-- notes -->
    <div class="form-group">
      <label for="notes">Notes</label>
      <textarea type="text" class="form-control" name="notes"></textarea>
    </div>
    <button type="submit" class="btn btn-dark">Add</button>
  </form>
</div>
